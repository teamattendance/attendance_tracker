<!DOCTYPE html>
<html>
<head>
  <title>AttendanceTrackerApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<% if @user%> 
		<div class ="container">
			<ul class ="navbar">
				<li><%= @user.first_name %> <%= @user.last_name %></li>
				<li><a href="/users/<%=@user.id%>">Profile</a></li>
				<li><%= link_to "Cohorts", cohorts_path %></li>
				<li><%= link_to "Log Out", logout_path %></li>
			</ul>
		</div>
		<%end%>
	</header>

<%= yield %>

</body>
</html>
